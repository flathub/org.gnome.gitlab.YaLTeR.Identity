{
    "app-id": "org.gnome.gitlab.YaLTeR.Identity",
    "runtime": "org.gnome.Platform",
    "runtime-version": "47",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.rust-stable",
        "org.freedesktop.Sdk.Extension.llvm18"
    ],
    "add-extensions": {
        "org.freedesktop.Platform.ffmpeg-full": {
            "directory": "lib/ffmpeg",
            "version": "24.08",
            "add-ld-path": "."
        }
    },
    "cleanup-commands": [
        "mkdir -p ${FLATPAK_DEST}/lib/ffmpeg"
    ],
    "cleanup": [
        "/bin/blueprint-compiler",
        "/lib/pkgconfig"
    ],
    "command": "identity",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri"
    ],
    "build-options": {
        "append-path": "/usr/lib/sdk/rust-stable/bin:/usr/lib/sdk/llvm18/bin",
        "env": {
            "RUSTFLAGS": "-C force-frame-pointers=yes"
        }
    },
    "modules": [
        {
            "name": "blueprint",
            "buildsystem": "meson",
            "cleanup": [
                "*"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/jwestman/blueprint-compiler.git",
                    "commit": "66b43c36cf1017c878762007373964a096b3d2a5"
                }
            ]
        },
        {
            "name": "glycin-loaders",
            "buildsystem": "meson",
            "config-opts": [
                "-Dlibglycin=false",
                "-Dtests=false"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/glycin/1.1/glycin-1.1.6.tar.xz",
                    "sha256": "d84cc56814f2284100ad3439a430837bb21f0f98d46e0d2b58689f2c19708f04",
                    "x-checker-data": {
                        "type": "gnome",
                        "name": "glycin"
                    }
                }
            ]
        },
        {
            "name": "identity",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://gitlab.gnome.org/-/project/12785/uploads/abddc256d6b3b7fce433a40eae4588fe/identity-0.7.0.tar.xz",
                    "sha256": "43dec5533b60aaa1b4d256d5d9879aa487b2115cef5f3f1818935dde9da284d6"
                },
                {
                    "type": "patch",
                    "path": "0001-Set-manual-lifetime-for-Tracy.patch"
                }
            ]
        }
    ]
}
